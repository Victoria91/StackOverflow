%table
  %tr
    %th
      %i{ style: 'margin-right:180px'} email:
    %td= @user.email
  %tr
    %th
      %i{ style: 'margin-right:180px'} Profile created:
    %td= @user.created_at.strftime("%B %d, %Y, %A")
  %tr
    %th
      %i{ style: 'margin-right:180px'} Visited:
    %td= @user.sign_in_count

- if @user.authorizations.present?
  Authorizations:
  %table
    %tr
      %th
        Avatar
      %th
        Provider
    - @user.authorizations.each do |auth|
      %tr
        %td=image_tag(auth.avatar_url)
        %td=auth.provider


