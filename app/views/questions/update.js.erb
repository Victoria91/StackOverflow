<% if @question.errors.present? %>
	<% @question.errors.full_messages.each do |message| %>
		$('.question_errors').html('<%= j message %>');
	<% end %>
<% else %>
	$('h2').html('<%= j @question.title %>');
	$('h3').html('<%= j @question.body %>');
	$('.edit_question').hide();
	$(document).ready(ready);
	$(document).on('page:load',ready);
<% end %>