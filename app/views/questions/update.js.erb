$('.question_errors').html('');
<% if @question.errors.present? %>
	<% @question.errors.full_messages.each do |message| %>
		$('.question_errors').append('<%= j message %>');
		$('.question_errors').append('<br/>');
	<% end %>
<% else %>
	$('.question h2').html('<%= j @question.title %>');
	$('.question h3').html('<%= j @question.body %>');
  $('.attachments').html('<%= j render 'attachments' %>')
  $('.tags').html('<%= j render 'tags' %>')
	$('.edit_question').hide();
	$(document).ready(ready);
	$(document).on('page:load',ready);
<% end %>