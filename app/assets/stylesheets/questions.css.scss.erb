.edit_question { 
	display: none;
}

.question_errors {
	color: red;
}

.answer:hover {
  border: 1px solid #cccccc;
}

.question .votes {
  margin-right: 20px;
  float: left;
  text-align: center;
}

.votes span {
  display: block;
  color: #808185;
  font-weight: normal;
  font-size: 24px;
}

.vote_up, .vote_down, .vote_up_link, .vote_down_link {
  background-position: 0 -560px;
  background-image: url('<%= image_path("so_sprites.png") %>');
}

.vote_up {
  background-position: 0 -265px;
  width: 41px;
  height: 25px;
}

.vote_down {
  background-position: 0 -300px;
  width: 41px;
  height: 25px;
}

.vote_up_link {
  float: left;
  background-position: 0 -234px;
  width: 39px;
  height: 25px;
}

.vote_down_link {
  float: left;
  background-position: 0 -327px;
  width: 39px;
  height: 25px;
}

.statistic {
  background: #ECDFC1;
  margin: 0 15px 0 7px;
  padding: 4px 7px 6px 7px;
  width: 86px;
  float: left;
  text-align: center;
}

.question_summary {
  border-bottom: 1px solid #eaeaea;
  overflow: hidden;
  padding: 11px 0;
  width: 80%;
  float: left;
}

.asked_time {
  float: right;
  color: #999;
}

.avatar {
  width: 37px;
  height: 37px;
  float: right;
}

.error {
  font-size: 24px;
  font-weight: 600;
}
